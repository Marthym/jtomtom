<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="jarify" name="jTomtom" basedir="..">

	<property file="ant/build.properties" />
	<property file="ant/default.properties" />

	<property name="dir.build" location="bin"/>
	<property name="dir.lib" location="lib"/>
	<property name="dir.src" location="src"/>

	<buildnumber file="ant/build.num"/>
	<tstamp>
		<format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
	</tstamp>
	
    <path id="jtomtom.classpath">
    	<fileset dir="${dir.lib}">
    		<include name="**/*.jar"/>
    	</fileset>
    </path>
    
    <target name="clean">
        <delete dir="${dir.build}"/>
    	<delete file="..${file.separator}jTomtom.jar"/>
    	<delete file="..${file.separator}jTomtom-src.tar.gz"/>
    	<delete file="..${file.separator}jTomtom-lang.tar.gz"/>
    </target>
	
    <target name="init">
        <mkdir dir="${dir.build}"/>
        <copy includeemptydirs="false" todir="${dir.build}">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
	
    <target name="cleanall" depends="clean"/>
	
	
    <target name="build-project" depends="init">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac 
        	debug="${jtomtom.build.debug}" debuglevel="${jtomtom.build.debuglevel}" 
        	destdir="${dir.build}" 
        	excludes="org/jtomtom/junit/**">
	            <src path="${dir.src}"/>
	            <classpath refid="jtomtom.classpath"/>
        </javac>
    </target>
    <target name="build" depends="cleanall,build-project" description="Compile jTomtom project ..."/>

	<target name="get.jarinjar.loader">
		<unzip src="${eclipse.home}${file.separator}plugins${file.separator}org.eclipse.jdt.ui_3.7.0.v20110531-1200.jar" dest=".">
		    <patternset>
		        <include name="jar-in-jar-loader.zip"/>
		    </patternset>
		    <mapper type="flatten"/>
		</unzip>
	</target>
			
    <target name="jarify" depends="get.jarinjar.loader, build" description="Create jTomtom runnable JAR file">
    	<delete file="..${file.separator}jTomtom.jar"/>
        <jar destfile="..${file.separator}jTomtom.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="org.jtomtom.JTomtom"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ org.hamcrest.core_1.1.0.v20090501071000.jar log4j-1.2.16.jar iso9660.jar sabre.jar json-1.0.jar"/>
				<attribute name="Implementation-Version" value="${jtomtom.version.num}-b${build.number}"/>   
				<attribute name="Built-Date" value="${TODAY}"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${dir.build}">
            	<exclude name="org${file.separator}jtomtom${file.separator}junit${file.separator}"/>
			</fileset>
            <zipfileset dir="${eclipse.home}${file.separator}plugins" includes="org.hamcrest.core_1.1.0.v20090501071000.jar"/>
            <zipfileset dir="${dir.lib}" includes="*.jar"/>
        </jar>
    </target>
	
    <target name="jtomtom.sourcepack" description="Create jTomtom sources pack file">
    	<delete file="..${file.separator}jTomtom-src.tar.gz"/>
        <tar destfile="..${file.separator}jTomtom-src.tar.gz" compression="gzip">
            <fileset dir=".">
            	<exclude name="jar-in-jar-loader.zip"/>
            	<exclude name="bin/"/>
            	<exclude name=".settings/"/>
			</fileset>
        </tar>
    </target>
	
    <target name="jtomtom.languagepack" description="Create jTomtom language pack file">
    	<delete file="..${file.separator}jTomtom-lang.tar.gz"/>
        <tar destfile="..${file.separator}jTomtom-lang.tar.gz" compression="gzip">
            <fileset dir=".">
            	<include name="src/org/jtomtom/gui/resources/lang**/*.properties"/>
			</fileset>
        </tar>
    </target>
	
</project>
